{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "docs/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/admin", "dest": "/docs/admin.html" },
    { "src": "/(.*)", "dest": "/docs/$1" }
  ],
  "functions": {
    "api/**/*.js": { "memory": 512, "maxDuration": 10 }
  }
}