# Example .env for municipales-limoges-news
# Copy this file to .env and fill values. Do NOT commit real secrets.

# Server port
PORT=3000

# Optional: NewsAPI key (leave empty to use RSS fallback)
NEWSAPI_KEY=26d7c06c7cbf46bbb63d9039e1e7b751

# Optional caching for NewsAPI responses
NEWSAPI_CACHE=false
NEWSAPI_CACHE_TTL=30

# ADMIN_TOKEN: put a strong random value here
# Generate locally: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_TOKEN=replace_me_with_a_secure_token

# Prefer department sources when scoring/filtering (true/false)
PREFER_DEPARTEMENT=true

# NewsAPI: limit lookback window (days) to avoid free-plan limits (default: 30)
NEWSAPI_LOOKBACK_DAYS=30

# STRICT_DEFAULT: set to 'true' to require Limoges + elections (municipales/Ã©lection) by default
STRICT_DEFAULT=true

